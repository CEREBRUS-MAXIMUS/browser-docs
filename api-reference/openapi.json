{
  "openapi": "3.0.1",
  "info": {
    "title": "Surfer Session Management API",
    "description": "API for managing browser sessions and tools in the Surfer application",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:42069"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Check if server is up",
        "responses": {
          "200": {
            "description": "Server is up",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Healthcheck",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/convertToMarkdown": {
      "post": {
        "summary": "Convert URL to Markdown",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string"
                  },
                  "local": {
                    "type": "boolean"
                  }
                },
                "required": ["url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Conversion successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConvertToMarkdownResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/parseStructuredOutput": {
      "post": {
        "summary": "Parse structured output from URL",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string"
                  },
                  "local": {
                    "type": "boolean"
                  },
                  "parsingOutput": {
                    "type": "object"
                  }
                },
                "required": ["url", "parsingOutput"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Parsing successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ParseStructuredOutputResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Session": {
        "type": "object",
        "properties": {
          "sessionID": {
            "type": "string"
          },
          "history": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "currentMarkdown": {
            "type": "string"
          },
          "currentDOMRepresentation": {
            "type": "object"
          },
          "currentTools": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "currentURL": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          },
          "permanentTools": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "ConvertToMarkdownResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "markdown": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          }
        }
      },
      "ParseStructuredOutputResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "structuredOutput": {
            "type": "object"
          },
          "metadata": {
            "type": "object"
          },
          "markdown": {
            "type": "string"
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
